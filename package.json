{
  "name": "clocktower-token-generator",
  "version": "0.3.3",
  "description": "Blood on the Clocktower Token Generator",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist/js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "dev": "npm-run-all --parallel dev:tsc dev:serve",
    "dev:tsc": "tsc --watch",
    "dev:serve": "vite",
    "dev:test": "npm-run-all --parallel dev:tsc dev:serve test:watch",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "precommit": "npm-run-all lint test build",
    "precommit:quick": "npm-run-all lint test",
    "prerelease": "npm-run-all clean build lint test:coverage test:e2e-checklist",
    "test:e2e-checklist": "node scripts/e2e-checklist.js",
    "validate": "npm-run-all lint test build",
    "preview": "vite preview",
    "clean:all": "npm-run-all clean clean:coverage",
    "clean:coverage": "rimraf coverage"
  },
  "dependencies": {
    "dexie": "^4.2.1",
    "fast-deep-equal": "^3.1.3",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/jszip": "^3.4.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "jsdom": "^27.3.0",
    "npm-run-all2": "^8.0.4",
    "rimraf": "^6.1.2",
    "typescript": "^5.7.0",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  },
  "keywords": [
    "blood-on-the-clocktower",
    "token-generator",
    "board-game"
  ],
  "license": "MIT"
}
