{
  "name": "clocktower-token-generator",
  "version": "0.3.5",
  "description": "Blood on the Clocktower Token Generator",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist/js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "dev": "npm-run-all --parallel dev:tsc dev:serve",
    "dev:tsc": "tsc --watch",
    "dev:serve": "vite",
    "dev:test": "npm-run-all --parallel dev:tsc dev:serve test:watch",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "precommit": "npm-run-all lint test build",
    "precommit:quick": "npm-run-all lint test",
    "prerelease": "npm-run-all clean build lint test:coverage test:e2e-checklist",
    "test:e2e-checklist": "node scripts/e2e-checklist.js",
    "validate": "npm-run-all lint test build",
    "preview": "vite preview",
    "clean:all": "npm-run-all clean clean:coverage",
    "clean:coverage": "rimraf coverage"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@mediapipe/tasks-vision": "^0.10.22-rc.20250304",
    "@pdf-lib/fontkit": "^1.1.1",
    "@types/html2canvas": "^0.5.35",
    "@types/react-window": "^1.8.8",
    "dexie": "^4.2.1",
    "fast-deep-equal": "^3.1.3",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.12.1",
    "jspdf": "^3.0.4",
    "jszip": "^3.10.1",
    "pdf-lib": "^1.17.1",
    "qr-code-styling": "^1.9.2",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-window": "^2.2.3"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/jszip": "^3.4.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "jsdom": "^27.3.0",
    "npm-run-all2": "^8.0.4",
    "rimraf": "^6.1.2",
    "typescript": "^5.7.0",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.15",
    "workbox-window": "^7.4.0"
  },
  "keywords": [
    "blood-on-the-clocktower",
    "token-generator",
    "board-game"
  ],
  "license": "MIT"
}
