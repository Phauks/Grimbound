{
  "name": "grimbound",
  "version": "0.4.2",
  "description": "Grimbound - Token Generator for Blood on the Clocktower",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist/js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "dev": "npm-run-all --parallel dev:tsc dev:serve",
    "dev:tsc": "tsc --watch",
    "dev:serve": "vite",
    "dev:test": "npm-run-all --parallel dev:tsc dev:serve test:watch",
    "lint": "npm-run-all --parallel typecheck biome:check",
    "lint:fix": "npm-run-all typecheck biome:fix",
    "typecheck": "tsc --noEmit",
    "biome:check": "biome check ./src",
    "biome:fix": "biome check --write ./src",
    "format": "biome format --write ./src",
    "precommit": "npm-run-all lint test build",
    "precommit:quick": "npm-run-all lint test",
    "prerelease": "npm-run-all clean build lint test:coverage test:e2e-checklist",
    "test:e2e-checklist": "node scripts/e2e-checklist.js",
    "validate": "npm-run-all lint test build",
    "preview": "vite preview",
    "clean:all": "npm-run-all clean clean:coverage",
    "clean:coverage": "rimraf coverage"
  },
  "dependencies": {
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lint": "^6.9.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@lezer/highlight": "^1.2.3",
    "@pdf-lib/fontkit": "^1.1.1",
    "@types/pako": "^2.0.4",
    "codemirror": "^6.0.2",
    "dexie": "^4.2.1",
    "jszip": "^3.10.1",
    "pako": "^2.1.0",
    "pdf-lib": "^1.17.1",
    "qr-code-styling": "^1.9.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "@types/jszip": "^3.4.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.15",
    "jsdom": "^27.3.0",
    "npm-run-all2": "^8.0.4",
    "rimraf": "^6.1.2",
    "sharp": "^0.34.5",
    "typescript": "^5.7.0",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.15",
    "workbox-window": "^7.4.0"
  },
  "keywords": [
    "blood-on-the-clocktower",
    "token-generator",
    "board-game"
  ],
  "license": "MIT"
}
